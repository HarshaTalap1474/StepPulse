<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8FAFC"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="28dp">

            <!-- HEADER SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="StepPulse"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:letterSpacing="-0.03"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track your daily movement &amp; health"
                        android:textSize="15sp"
                        android:textColor="#64748B"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>

                <!-- PROFILE/STATUS ICON -->
                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/bg_profile_circle"
                    android:padding="10dp"
                    android:contentDescription="Profile"/>
            </LinearLayout>

            <!-- DAILY GOAL CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#4F46E5"
                android:layout_marginBottom="24dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_target"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Daily Goal"
                        app:tint="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Goal"
                            android:textSize="14sp"
                            android:textColor="#E0E7FF"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/tv_daily_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10,000 steps"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_goal"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:trackColor="#6366F1"
                        app:indicatorColor="#FFFFFF"
                        app:trackThickness="4dp"
                        app:indicatorSize="48dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- STATS CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="24dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Activity"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginBottom="24dp"/>

                    <!-- STATS ROW -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- STEPS -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_steps"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription="Steps"
                                    app:tint="#4F46E5" />

                                <TextView
                                    android:id="@+id/tv_steps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="#1E293B"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Steps"
                                android:textSize="14sp"
                                android:textColor="#64748B"/>
                        </LinearLayout>

                        <!-- DIVIDER -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:background="#F1F5F9"
                            android:layout_marginHorizontal="8dp"/>

                        <!-- DISTANCE -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_distance"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription="Distance"
                                    app:tint="#10B981" />

                                <TextView
                                    android:id="@+id/tv_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#1E293B"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kilometers"
                                android:textSize="14sp"
                                android:textColor="#64748B"/>
                        </LinearLayout>

                        <!-- DIVIDER -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:background="#F1F5F9"
                            android:layout_marginHorizontal="8dp"/>

                        <!-- CALORIES -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_calorie"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription="Calories"
                                    app:tint="#F97316" />

                                <TextView
                                    android:id="@+id/tv_calories"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#1E293B"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calories"
                                android:textSize="14sp"
                                android:textColor="#64748B"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- TIME & PACE -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="28dp"
                        android:weightSum="2">

                        <!-- ACTIVE TIME -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Time"
                                android:textSize="12sp"
                                android:textColor="#94A3B8"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tv_active_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0h 0m"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1E293B"/>
                        </LinearLayout>

                        <!-- AVERAGE PACE -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg. Pace"
                                android:textSize="12sp"
                                android:textColor="#94A3B8"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tv_pace"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0:00 /km"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1E293B"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ACTIVITY GRAPH CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="24dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Weekly Activity"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1E293B"/>

                        <!-- TIME RANGE SELECTOR -->
                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Week"
                                app:chipBackgroundColor="@color/chip_selector"
                                app:chipStrokeColor="#4F46E5"
                                app:chipStrokeWidth="1dp"
                                app:checkedIconVisible="false"
                                app:chipCornerRadius="16dp"
                                android:checked="true"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Month"
                                app:chipBackgroundColor="@color/chip_selector"
                                app:chipStrokeColor="#4F46E5"
                                app:chipStrokeWidth="1dp"
                                app:checkedIconVisible="false"
                                app:chipCornerRadius="16dp"/>
                        </com.google.android.material.chip.ChipGroup>
                    </LinearLayout>

                    <!-- CHART -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/activityChart"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"/>

                    <!-- CHART LEGEND -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="20dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#4F46E5"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="#4F46E5"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Steps"
                                android:textSize="12sp"
                                android:textColor="#64748B"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#10B981"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="#10B981"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Goal"
                                android:textSize="12sp"
                                android:textColor="#64748B"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ACTION BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:weightSum="2"
                android:gravity="center_vertical">

                <!-- SHARE BUTTON -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="Share Progress"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_share"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    app:backgroundTint="#4F46E5"
                    app:rippleColor="#4338CA"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#4F46E5"
                    app:strokeWidth="1dp"/>

                <!-- BMI BUTTON -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_bmi"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="BMI Calculator"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_bmi"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    app:backgroundTint="#10B981"
                    app:rippleColor="#059669"
                    style="@style/Widget.MaterialComponents.Button"/>

            </LinearLayout>

            <!-- HEALTH TIPS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F1F5F9"
                android:padding="20dp"
                android:backgroundTint="#F1F5F9"
                android:backgroundTintMode="multiply"
                android:clipToPadding="true"
                android:clipChildren="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Health Tip"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_health_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Walking 10,000 steps daily can reduce the risk of chronic diseases by 30%."
                    android:textSize="13sp"
                    android:textColor="#475569"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>